<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:Artis.ArtisDataFiller.Controls" x:Class="Artis.ArtisDataFiller.AddActorDialogWindow"
        Height="300" Width="300" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" Style="{DynamicResource DialogWindowStyle}"	
		FocusManager.FocusedElement="{Binding ElementName=NameBox}"	
		>
		<Controls:WatermarkedTextBox x:Name="NameBox" TextWrapping="Wrap" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="10,0" Watermark="ФИО"/>
</Window>
