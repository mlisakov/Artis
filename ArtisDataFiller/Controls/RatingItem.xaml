<UserControl x:Class="Artis.ArtisDataFiller.Controls.RatingItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<Grid MouseEnter="OnGridMouseEnter" MouseLeave="OnGridMouseLeave" MouseUp="OnGridMouseUp">

			<Path Fill="Black" Stroke="Transparent" StrokeThickness="1"
                Data="M 5,0 L 4,4 L 0,4 L 3,7 L 2,11 L 5,9 L 6,9 L 9,11 L 8,7 L 11,4 L 7,4 L 6,0"/>

			<Rectangle x:Name="Mask" Margin="0"/>

			<Path Name="PathFill" Fill="White" Stroke="Transparent" StrokeThickness="1"
                Data="M 5,0 L 4,4 L 0,4 L 3,7 L 2,11 L 5,9 L 6,9 L 9,11 L 8,7 L 11,4 L 7,4 L 6,0"/>

		</Grid>
	</Grid>
</UserControl>
